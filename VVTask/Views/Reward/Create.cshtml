@model Reward

<h2> Creating Reward </h2>

<form method="post">
    <input type="hidden" asp-for="@Model.KidId" class="form-control" />
    <div class="form-group">
        <label asp-for="@Model.Description"></label>
        <input asp-for="@Model.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Point"></label>
        <input asp-for="@Model.Point" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary"
            asp-controller="Reward"
            asp-action="Create">
        Create
    </button>
</form>