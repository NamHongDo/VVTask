@model Reward
    <div class="container">
        <div class="row align-items-center account-form">
            <div class="col-md-6 offset-md-3">
                <h1 class="text-center"> Editing Kid Profile</h1>
                <form method="post" class="d-flex flex-column  pb-4">
                    <input type="hidden" asp-for="@Model.KidId" />
                    <input type="hidden" asp-for="@Model.RewardId" />
                    <div class="form-group">
                        <label asp-for="@Model.RewardName"></label>
                        <input asp-for="@Model.RewardName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description"></label>
                        <input asp-for="@Model.Description" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Point"></label>
                        <input asp-for="@Model.Point" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>