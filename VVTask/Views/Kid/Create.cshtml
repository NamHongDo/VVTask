@model KidCreateViewModel

    <div class="form-page-container">
        <div class="background-color-theme-secondary rounded form-panel-sm form-panel-md">
            <h1 class="text-center">
                Add a kid
            </h1>
            <form enctype="multipart/form-data" method="post" class="d-flex flex-column">
                <div asp-validation-summary="All" class="color-orange"></div>
                <div class="form-group">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <input type="hidden" asp-for="@Model.ApplicationUserId" />
                    <span asp-validation-for="@Model.Name" class="color-orange"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Photo" class="col-form-label"></label>
                    <div class="custom-file">
                        <input asp-for="@Model.Photo" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose Photo</label>
                    </div>
                </div>

                <button type="submit" class="btn btn-is-purple"
                        asp-controller="Kid"
                        asp-action="Create">
                    Create
                </button>

                @section Scripts{
                    <script>
                        $(document).ready(function () {
                            $('.custom-file-input').on("change", function () {
                                var fileName = $(this).val().split("\\").pop();
                                $(this).next('.custom-file-label').html(fileName);
                            });
                        });
                    </script>
                }
            </form>
        </div>
    </div>