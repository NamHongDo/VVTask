@model Kid

<h2> Editing Kid Profile</h2>

<form method="post">
    <input type="hidden" asp-for="@Model.KidId" />
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.TotalPoint"></label>
        <input asp-for="@Model.TotalPoint" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>