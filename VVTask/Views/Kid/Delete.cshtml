@model Kid

<h1>Delete</h1>

<div class="alert alert-danger">
    Are you sure you want to delete @Model.Name @Model.KidId  @Model.TotalPoint profile and all associate inforation?
</div>

<form asp-action="Delete" asp-route-KidId="@Model.KidId" method="post">
    <input type="hidden" asp-for="@Model.Name" />
    <input type="hidden" asp-for="@Model.KidId" />
    <input type="hidden" asp-for="@Model.ApplicationUserId" />
    <button type="submit" class="btn btn-danger" asp-route-KidId="@Model.KidId"> Yes!</button>
    <a asp-controller="KidProfile" asp-action="List">Cancel</a>
</form>