@model VTask
<div class="custom-page-container d-flex justify-content-center">
    <div class="confirm-form d-flex flex-column justify-content-center">
        <h1 class="color-orange">Delete</h1>
        <div class="alert alert-orange">
            Are you sure you want to delete @Model.Description?
        </div>
        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Description" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Point" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.KidId" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.VTaskId" class="form-control" />
            </div>
            <button type="submit" class="btn btn-is-orange"> Yes!</button>
            <a asp-controller="VTask" asp-action="List" asp-route-VTaskId="@Model.VTaskId" class="btn btn-is-green">Cancel</a>
        </form>
    </div>
</div>